<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewInstructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:saveEnabled="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailUebungName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/detailName"
            android:textColor="@color/darkTextColorLight"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/staticDetailMuskelGruppe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/detailUebungName"
            android:layout_marginLeft="5dp"
            android:text="@string/detailMG"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailMuskelGruppe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/detailUebungName"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/staticDetailMuskelGruppe"
            android:text="Test Muskelgruppe"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailSchwierigkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailMuskelGruppe"
            android:layout_below="@+id/detailMuskelGruppe"
            android:text="@string/detailSchwierigkeit"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailSchwierigkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailMuskelGruppe"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/detailMuskelGruppe"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Schwierigkeit"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailBeschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailSchwierigkeit"
            android:layout_below="@+id/detailSchwierigkeit"
            android:text="@string/detailDesc"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailBeschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailSchwierigkeit"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/detailSchwierigkeit"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Beschreibung"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailAnleitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailBeschreibung"
            android:layout_below="@+id/detailBeschreibung"
            android:text="@string/detailAnl"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailAnleitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailBeschreibung"
            android:layout_below="@id/detailBeschreibung"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Anleitung"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailAnleitung"
            android:layout_below="@+id/detailAnleitung"
            android:text="@string/detailEquipment"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailAnleitung"
            android:layout_below="@id/detailAnleitung"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Equipment"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailRepMaxDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailEquipment"
            android:layout_alignStart="@id/staticDetailEquipment"
            android:text="@string/detailRepMax"
            android:textColor="@color/darkTextColorLight" />

        <ImageButton
            android:id="@+id/staticDetailRepMax"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailEquipment"
            android:layout_toRightOf="@id/staticDetailRepMaxDesc"
            android:src="@drawable/questionsmall"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@null"
            android:paddingLeft="3dp"/>

        <TextView
            android:id="@+id/detailGewicht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailEquipment"
            android:layout_below="@id/detailEquipment"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Gewicht"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailSaetze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailRepMaxDesc"
            android:layout_below="@+id/detailGewicht"
            android:text="@string/detailSaetze"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailSaetze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailGewicht"
            android:layout_below="@id/detailGewicht"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Saetze"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/staticDetailWiederholungen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/staticDetailSaetze"
            android:layout_below="@+id/detailSaetze"
            android:text="@string/detailWiederholungen"
            android:textColor="@color/darkTextColorLight" />

        <TextView
            android:id="@+id/detailWiederholungen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailSaetze"
            android:layout_below="@id/detailSaetze"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="Test Wiederholungen"
            android:textColor="@color/darkTextColorLight" />

        <ImageButton
            android:id="@+id/ibLinkVideo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/detailWiederholungen"
            android:adjustViewBounds="true"
            android:background="@color/darkSecondary"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/videoplay2redsmall" />

        <TextView
            android:id="@+id/tvLinkVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ibLinkVideo"
            android:layout_alignTop="@id/ibLinkVideo"
            android:layout_below="@id/detailWiederholungen"
            android:layout_toRightOf="@id/ibLinkVideo"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="@string/videoLink"
            android:textColor="@color/darkTextColorFlashy"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnEndTraining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibLinkVideo"
            android:text="End your Training!"
            android:visibility="gone"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnEndTraining"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUebLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnLastUeb"
                android:textColor="@color/darkPrimary" />

            <Button
                android:id="@+id/btnUebNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnNextUeb"
                android:textColor="@color/darkPrimary" />

            <Button
                android:id="@+id/btnClocksHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnClocksHide"
                android:textColor="@color/darkPrimary" />

            <Button
                android:id="@+id/btnMusicHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnMusicHide"
                android:textColor="@color/darkPrimary" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>