<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/sbHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-160dp"
        android:layout_marginRight="160dp"
        android:rotation="270"
        android:splitTrack="false"
        android:longClickable="false" />

    <SeekBar
        android:id="@+id/sbWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvSizeStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sizeString"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/sbHeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />

    <TextView
        android:id="@+id/tvWeightStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sbWeight"
        android:layout_centerHorizontal="true"
        android:text="@string/weightString"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>