<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statisticGreeting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dummy Text"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginBottom="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/statisticMoodLabel"
            android:layout_gravity="center_horizontal"
            android:text="Dein GemÃ¼tszustand" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphMood"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="right"
            app:seriesColor="#ee0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Soviel hast du gehoben!"
            android:id="@+id/statisticWeightLabel"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphLift"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="right"
            app:seriesColor="#ee0000" />

    </LinearLayout>
</ScrollView>