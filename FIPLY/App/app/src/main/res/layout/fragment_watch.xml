<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Chronometer
        android:id="@+id/myChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnWatchStart"
        android:layout_alignEnd="@+id/btnWatchStart"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/buttonshape"
        android:paddingLeft="5dp"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btnWatchReset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/btnWatchStart"
        android:background="@drawable/buttonshape"
        android:text="@string/watchReset" />

    <Button
        android:id="@+id/btnWatchStart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnWatchLap"
        android:layout_margin="2dp"
        android:background="@drawable/buttonshape"
        android:text="@string/watchStart" />

    <Button
        android:id="@+id/btnWatchLap"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnWatchReset"
        android:layout_below="@+id/btnWatchReset"
        android:layout_margin="2dp"
        android:background="@drawable/buttonshape"
        android:text="@string/watchLap" />

</RelativeLayout>